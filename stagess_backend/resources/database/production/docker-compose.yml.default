services:
  mysql:
    image: mysql:8.0
    container_name: stagess_production
    restart: always
    environment:
      - MYSQL_ROOT_PASSWORD=<FILL_PASSWORD>
      - MYSQL_DATABASE=production_db
      - MYSQL_USER=admin
      - MYSQL_PASSWORD=<ADMIN_PASSWORD>
    ports:
      - "3307:3306"
    volumes:
      - mysql_data:/var/lib/mysql
    networks:
      - network

volumes:
  mysql_data:


networks:
  network:
